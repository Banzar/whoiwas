	<%= simple_form_for(@user, html: { multipart: true }) do |user| %>
    	<%= render 'shared/error_messages' %>
		<%= user.input :name %>
		<%= user.input :avatar, as: :file %>
		<%= user.input :email %>
		<%= user.input :password %>
		<%= user.input :password_confirmation %>
		<% if current_user.try(:super?) %>
			<%= user.input :admin %>
			<%= user.input :moderator %>
			<%= user.input :super %>
		<% end %>
		<%= user.submit "Create Account", :onclick => "alert('Activation email has been sent, please activate your account to be able to log in.')" %>
	<% end %>